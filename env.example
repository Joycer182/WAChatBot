# Configuración del Bot de WhatsApp
PORT=3000

# Configuración de WhatsApp
WHATSAPP_SESSION_NAME=wschatbot-session

# Configuración de la empresa (personaliza estos valores)
EMPRESA_NOMBRE=Tu Empresa
EMPRESA_EMAIL=contacto@tuempresa.com
EMPRESA_WEB=www.tuempresa.com
EMPRESA_DIRECCION=Tu dirección aquí

# Horarios de atención
HORARIO_LUNES_VIERNES=9:00 AM - 6:00 PM
HORARIO_SABADOS=9:00 AM - 2:00 PM
HORARIO_DOMINGOS=Cerrado

# Tipos de cliente
CLIENT_TYPE_GENERAL=general
CLIENT_TYPE_TIENDA=tienda
CLIENT_TYPE_INSTALADOR=instalador

# Configuración de logging
LOG_LEVEL=info
LOG_CONVERSATIONS=true

# Configuración de productos desde Excel
PRICE_MULTIPLIER=1.0
EXCEL_FILE_PATH=TablaProductos.xlsx
EXCEL_SHEET_NAME=Precios

# Configuración de tipos de cliente
DEFAULT_CLIENT_TYPE=general
ENABLE_CLIENT_TYPE_COMMANDS=true

# Versión del catálogo de precios
CATALOG_VERSION=1.0

# Configuración de cotizaciones
MAX_QUOTE_QUANTITY=1000 # Límite para diferenciar entre una cantidad y un código de producto en cotizaciones rápidas